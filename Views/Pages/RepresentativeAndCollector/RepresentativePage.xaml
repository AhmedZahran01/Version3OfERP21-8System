<Page x:Class="Version3OfERP21_8System.Views.Pages.RepresentativeAndCollector.RepresentativePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:userControls="clr-namespace:Version3OfERP21_8System.Views.UserControls"
      xmlns:local="clr-namespace:Version3OfERP21_8System.Views.Pages.RepresentativeAndCollector"
      mc:Ignorable="d" 
      d:DesignHeight="950" d:DesignWidth="1000"
      Title="RepresentativePage">



    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/TableStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/BorderStyles.xaml"/>

                <ResourceDictionary Source="../../../Styles/BorderStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="MainFont">pack://application:,,,/Assets/#Roboto</FontFamily>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <BooleanToVisibilityConverter x:Key="StringIsNullOrEmptyToVisibilityConverter" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid>

        <Grid Background="{DynamicResource BackgroundColor}" Margin=" 0 0 0 0">

            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="1.5*"/>
                <!-- المدخلات -->
                <RowDefinition Height="1*"/>
                <!-- الأزرار -->
                <RowDefinition Height="5*"/>
                <RowDefinition Height="*"/>
                <!-- الجدول -->
            </Grid.RowDefinitions>
            <userControls:TitleBar/>

            <!-- قسم المدخلات -->
            <StackPanel Grid.Row="1" Orientation="Vertical" HorizontalAlignment="Right" Margin="10 0 5 0 ">
                <StackPanel Orientation="Horizontal" Margin="0 10 10 5">
                    <TextBox x:Name="txtRegionName" Width="200" Height="25"  Style="{StaticResource textboxx}"  
                              />

                    <TextBlock Text="   : اسم المندوب       " 
               Foreground="White" FontSize="14" 
               VerticalAlignment="Center"  Margin="5 0"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" Margin="0 10 10 5">
                    <TextBox x:Name="txtRegionName2" Width="200" Height="25"  Style="{StaticResource textboxx}"  
               />

                    <TextBlock Text="   : رقم المستخدم        " 
Foreground="White" FontSize="14" 
VerticalAlignment="Center"  Margin="5 0"/>
                </StackPanel>
 
                <StackPanel Orientation="Horizontal" Margin="0 10 10 5">
                    <TextBox x:Name="txtRegionName3" Width="200" Height="25"  Style="{StaticResource textboxx}"  
               />

                    <TextBlock Text="   :  باسورد المندوب         " 
Foreground="White" FontSize="14" 
VerticalAlignment="Center"  Margin="5 0"/>
                </StackPanel>
 

            </StackPanel>

            <!-- الأزرار -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0">
                <Button Style="{StaticResource DeleteButtonn}"
                   Content="حذف"   Margin="10" Click="BtnDelete_Click"/>
                <Button Style="{StaticResource AddButtonn}"
                     Content="إضافة"  Margin="10" Click="BtnAdd_Click"/>
            </StackPanel>

            <!-- الجدول -->
            <DataGrid Grid.Row="3"
      x:Name="dgRepresentatives"
      AutoGenerateColumns="False"
      CanUserAddRows="False"
      CanUserDeleteRows="False"
      IsReadOnly="False"
      HeadersVisibility="Column"
      FontSize="14" 
      RowHeight="25" Width="1200"
      Background="White" 
                   FlowDirection="RightToLeft">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Id}" Header="الرقم المسلسل" Width="*"/>
                    <DataGridTextColumn Binding="{Binding Name}" Header=" اسم المندوب " Width="2*"/>
                    <DataGridTextColumn Binding="{Binding user_Number}" Header=" رقم المندوب " Width="2*"/>
                    <DataGridTextColumn Binding="{Binding user_Password}" Header=" الرقم السري للمندوب  " Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>




            <Button Grid.Row="4" HorizontalAlignment="Left"   CommandParameter="DashBoardDoctor" 
               Content="↩" FontSize="22" Style="{StaticResource triggerrr}"
               Margin="21,30,0,1"  
               Click="BackBtn_Click"/>

        </Grid>
    </Grid>


</Page>
