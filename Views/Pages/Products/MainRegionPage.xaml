<Page x:Class="Version3OfERP21_8System.Views.Pages.Products.MainRegionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
              xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:userControls="clr-namespace:Version3OfERP21_8System.Views.UserControls"
    
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Version3OfERP21_8System.Views.Pages.Products"
      mc:Ignorable="d" 
      d:DesignHeight="950" d:DesignWidth="1200"
      Title="Main Region Page">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/TableStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/BorderStyles.xaml"/>

                <ResourceDictionary Source="../../../Styles/BorderStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="MainFont">pack://application:,,,/Assets/#Roboto</FontFamily>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <BooleanToVisibilityConverter x:Key="StringIsNullOrEmptyToVisibilityConverter" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid>

        <Grid Background="{DynamicResource BackgroundColor}" Margin="20">

            <Grid.RowDefinitions>
                <RowDefinition Height=".7*"/>
                <RowDefinition Height="1.6*"/>
                <!-- المدخلات -->
                <RowDefinition Height="1.1*"/>
                <!-- الأزرار -->
                <RowDefinition Height="6*"/>
                <RowDefinition Height="*"/>
                <!-- الجدول -->
            </Grid.RowDefinitions>
            <userControls:TitleBar/>

            <!-- قسم المدخلات -->
            <StackPanel   FlowDirection="RightToLeft" Grid.Row="1" Orientation="Horizontal" 
                          Margin="0 10 0 10 ">
                <StackPanel Orientation="Horizontal" Margin="5 5 10 5">

                    <TextBlock Text="اسم المنطقة الأساسية :   "  
                               Foreground="White" FontSize="24" 
                               VerticalAlignment="Center"  Margin="5 0"/>

                    <TextBox x:Name="txtRegionName" Width="150" Height="25"  Style="{StaticResource textboxx}"  
                                   />

                    
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin=" 5 5 0 10">

                    <TextBlock Text="  بداية الترقيم للمنطقة :"  
                               Foreground="White" FontSize="24" 
                               VerticalAlignment="Center" Margin="5 0"/>

                    <TextBox x:Name="txtRegionStartNumber" Width="100" Height="25"  
                             ToolTip="ادخل بداية الترقيم"
                             Style="{StaticResource textboxx}"  
                             /> 
                    
                </StackPanel>
                
                <StackPanel Margin="0,0,0,0" Orientation="Horizontal" Grid.Column="1">

                    <Label Margin="0,0,0,0" Content=" بحث ب اسم المنطقة : " 
                           VerticalAlignment="Center"
                           FontSize="24"  Style="{StaticResource LabelStyle}"></Label>
                    
                    <TextBox x:Name="SearchByItemTextBox"
             Width="200"
             Height="25" Margin="0 0 0 0"
             Style="{StaticResource textboxx}"                    
             VerticalAlignment="Center"
             HorizontalAlignment="Center"
             TextChanged="SearchByItemFullNameBox_TextChanged"
             />
                    <Popup x:Name="SuggestionsPopup"
           Placement="Bottom"
           PlacementTarget="{Binding ElementName = SearchByItemTextBox}"
           StaysOpen="False"
           Width="250"
           Height="auto">
                        <ListBox x:Name="SuggestionsItemsListBox" 
                 SelectionChanged="SuggestionsItemsListBoxForText_SelectionChanged"
                 Background="White"
                 SelectionMode="Multiple"
                 />
                    </Popup>
                    
                </StackPanel>
                  
            </StackPanel>

            <!-- الأزرار -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" 
                        HorizontalAlignment="Center" Margin="10">
                <Button Style="{StaticResource DeleteButtonn}"
                        Content="حذف"   Margin="10" Click="BtnDelete_Click"/>
                <Button Style="{StaticResource AddButtonn}"
                          Content="إضافة"  Margin="10" Click="BtnAdd_Click"/>
            </StackPanel>
 
            <!-- الجدول -->
            <DataGrid Grid.Row="3"
           x:Name="dgMainRegions" 
           AutoGenerateColumns="False"
           CanUserAddRows="False" VerticalAlignment="Center"
                       
           IsReadOnly="False"
           HeadersVisibility="Column"
           FontSize="14"
           FlowDirection="RightToLeft"
           RowHeight="25"
           Background="White">

                <DataGrid.Columns>
                    <!-- الرقم المسلسل -->
                    <DataGridTextColumn Binding="{Binding Id}" Header="الرقم المسلسل" Width="*" >
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- المنطقة الأساسية -->
                    <DataGridTextColumn Binding="{Binding MainRegionName}" Header="المنطقة الأساسية" Width="2*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <!-- بداية الترقيم -->
                    <DataGridTextColumn Binding="{Binding start_Number}" Header="بداية الترقيم" Width="3*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="TextAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
                
            </DataGrid>
  
            <Button Grid.Row="4" HorizontalAlignment="Left"   CommandParameter="DashBoardDoctor" 
                    Content="↩" FontSize="33" Style="{StaticResource triggerrr}"
                    Margin="71,0,0,1"  Height="55"
                    Click="BackBtn_Click"/>

        </Grid>
    </Grid>
    
</Page>
