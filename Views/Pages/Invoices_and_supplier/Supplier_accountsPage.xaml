<Page x:Class="Version3OfERP21_8System.Views.Pages.Invoices_and_supplier.Supplier_accountsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Version3OfERP21_8System.Views.Pages.Invoices_and_supplier"
      mc:Ignorable="d" 
      xmlns:userControls="clr-namespace:Version3OfERP21_8System.Views.UserControls"
 d:DesignHeight="950" d:DesignWidth="1200"      
     Title="Supplier_accounts">


    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/TableStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/BorderStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/ComboBoxStyles.xaml"/>

                <ResourceDictionary Source="../../../Styles/BorderStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="MainFont">pack://application:,,,/Assets/#Roboto</FontFamily>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <BooleanToVisibilityConverter x:Key="StringIsNullOrEmptyToVisibilityConverter" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid>

        <Grid Background="{DynamicResource BackgroundColor}" Margin="20">

            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1.6*"/>
                <!-- المدخلات -->
                <RowDefinition Height="1"/>
                <!-- الأزرار -->
                <RowDefinition Height="7*"/>
                <RowDefinition Height="*"/>
                <!-- الجدول -->
            </Grid.RowDefinitions>
            <userControls:TitleBar/>

            <!-- قسم المدخلات -->
            <StackPanel   FlowDirection="RightToLeft" Grid.Row="1" Orientation="Horizontal" 
               Margin="0 10 0 10 ">
                <StackPanel Orientation="Horizontal" Margin="5 5 10 5">

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 10">

                        <TextBlock Text="    اسم المورد :" 
                         Foreground="White" FontSize="14" 
                         VerticalAlignment="Center" Margin="20 0"/>
                        <!--<TextBox x:Name="txtSubRegionName" Width="200" Height="25"/>-->
                        <ComboBox x:Name="cb_MainRegionName" 
                         Style="{StaticResource SmallerComboBox}"  
                         />

                    </StackPanel>


                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin=" 5 5 0 10">
                    <StackPanel Orientation="Horizontal" Margin="0 10 10 5">
                        <TextBlock Text="    بدايه الفترة   :     " 
                        Foreground="White" FontSize="14" 
                       VerticalAlignment="Center"  Margin="5 0"/>
                        <DatePicker x:Name="txtRegionName" Style="{StaticResource datepickerx1}" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin=" 5 5 0 10">
                    <StackPanel Orientation="Horizontal" Margin="0 10 10 5">
                        <TextBlock Text="   نهايه الفتره   :     " 
            Foreground="White" FontSize="14" 
           VerticalAlignment="Center"  Margin="5 0"/>
                        <DatePicker x:Name="txtRegionName1" Style="{StaticResource datepickerx1}" />
                    </StackPanel>
                </StackPanel>


                <!-- الأزرار -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="10">

                    <Button Style="{StaticResource AddButtonn}"
                      Content="اظهار النتائج"  Margin="10" />
                </StackPanel>

            </StackPanel>



            <!-- الجدولين جنب بعض مع Title فوق و Input تحت -->
            <Grid Grid.Row="3" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <!-- الموردين -->
                    <ColumnDefinition Width="*" />
                    <!-- النقدية -->
                </Grid.ColumnDefinitions>

                <!-- القسم الأول: الموردين -->
                <StackPanel Grid.Column="0" Margin="10" FlowDirection="RightToLeft">
                    <!-- العنوان -->

                    <TextBlock Text="💵 النقدية المسلّمة"
                   FontSize="22" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   Margin="0 0 0 10"
                   HorizontalAlignment="Center"/>

                    <!-- الجدول -->
                    <DataGrid x:Name="dgSuppliers"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="False"
                  HeadersVisibility="Column"
                  FontSize="14" 
                  RowHeight="25"
                  Background="White"
                  Height="333"
                  FlowDirection="RightToLeft"
                  Margin="0 0 0 10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding SupplierId}" Header="رقم المسلسل" Width="*"/>
                            <DataGridTextColumn Binding="{Binding SupplierName}" Header="تاريخ التوريد" Width="2*"/>
                            <DataGridTextColumn Binding="{Binding TotalAmount}" Header="اسم المورد" Width="2*"/>
                            <DataGridTextColumn Binding="{Binding TotalAmount}" Header="المبلغ المورد" Width="2*"/>

                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- المدخلات -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 5">


                        <TextBlock Text="اجل عند نهايه الفتره :" Foreground="White" VerticalAlignment="Center" Margin="5"/>
                        <TextBox Width="255" Height="48" Style="{StaticResource textboxx}" TextChanged="TextBox_TextChanged" />
                    </StackPanel>
                </StackPanel>

                <!-- القسم الثاني: النقدية -->
                <StackPanel Grid.Column="1" Margin="10" FlowDirection="RightToLeft">
                    <!-- العنوان -->
                    <TextBlock Text="📌 الفواتير"
                   FontSize="22" 
                   FontWeight="Bold" 
                   Foreground="White" 
                   Margin="0 0 0 10"
                   HorizontalAlignment="Center"/>

                    <!-- الجدول -->
                    <DataGrid x:Name="dgCash"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="False"
                  HeadersVisibility="Column"
                  FontSize="14" 
                  RowHeight="25"
                  Background="White"
                  Height="327"
                  FlowDirection="RightToLeft"
                  Margin="0 0 0 10">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding CashId}" Header="الرقم المسلسل" Width="*"/>
                            <DataGridTextColumn Binding="{Binding Date}" Header="تاريخ الفاتوره" Width="2*"/>
                            <DataGridTextColumn Binding="{Binding SupplierName}" Header="نوع الحركه" Width="2*"/>
                            <DataGridTextColumn Binding="{Binding CashAmount}" Header="نوع الشراء" Width="2*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- المدخلات -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 5">


                        <TextBlock Text="اجل عند بدايه الفتره :" Foreground="White" VerticalAlignment="Center" Margin="5"/>
                        <TextBox Width="255" Height="48" Style="{StaticResource textboxx}" TextChanged="TextBox_TextChanged" />
                    </StackPanel>
                </StackPanel>
            </Grid>



            <Button Grid.Row="4" HorizontalAlignment="Left"   CommandParameter="DashBoardDoctor" 
                    Content="↩" FontSize="33" Style="{StaticResource triggerrr}"
                    Margin="71,0,0,1"  Height="55"
                    Click="BackBtn_Click"/>

        </Grid>
    </Grid>
    
    
</Page>
