<Page x:Class="Version3OfERP21_8System.Views.Pages.Invoices_and_supplier.StoresPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Version3OfERP21_8System.Views.Pages.Invoices_and_supplier"
      mc:Ignorable="d" 
          xmlns:userControls="clr-namespace:Version3OfERP21_8System.Views.UserControls"
d:DesignHeight="950" d:DesignWidth="1000" 
     Title="Stores">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../Styles/ButtonStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/TextBoxStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/TextBlockStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/TableStyles.xaml"/>
                <ResourceDictionary Source="../../../Styles/BorderStyles.xaml"/>

                <ResourceDictionary Source="../../../Styles/BorderStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <FontFamily x:Key="MainFont">pack://application:,,,/Assets/#Roboto</FontFamily>
            <BooleanToVisibilityConverter x:Key="BoolToVis" />
            <BooleanToVisibilityConverter x:Key="StringIsNullOrEmptyToVisibilityConverter" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid>

        <Grid Background="{DynamicResource BackgroundColor}" Margin="20">

            <Grid.RowDefinitions>
                <RowDefinition Height=".7*"/>
                <RowDefinition Height="1.6*"/>
                <!-- المدخلات -->
                <RowDefinition Height="1.1*"/>
                <!-- الأزرار -->
                <RowDefinition Height="6*"/>
                <RowDefinition Height="*"/>
                <!-- الجدول -->
            </Grid.RowDefinitions>
            <userControls:TitleBar/>

            <!-- قسم المدخلات -->
            <StackPanel   FlowDirection="RightToLeft" Grid.Row="1" Orientation="Horizontal" 
                       Margin="0 10 0 10 ">
                <StackPanel Orientation="Horizontal" Margin=" 5 5 0 10">
                    <StackPanel Orientation="Horizontal" Margin="0 10 10 5">
                        <TextBlock
          Foreground="White" FontSize="14" 
         VerticalAlignment="Center"  Margin="5 0"/>
                        <DatePicker x:Name="txtRegionName" Style="{StaticResource datepickerx1}" />
                    </StackPanel>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin=" 5 5 0 10">
                    <StackPanel Orientation="Horizontal" Margin="0 10 10 5">
                        <TextBlock  
                  Foreground="White" FontSize="14" 
                 VerticalAlignment="Center"  Margin="5 0"/>
                        <DatePicker x:Name="txtRegionName1" Style="{StaticResource datepickerx1}" />
                    </StackPanel>
                </StackPanel>

                <!-- الأزرار -->
                <StackPanel Grid.Row="2" Orientation="Horizontal" 
             HorizontalAlignment="Center" Margin="10">

                    <Button Style="{StaticResource AddButtonn}"
     Content="اظهار النتائج "  
     Margin="10"
     Width="200" Height="60"/>

                    <Button Style="{StaticResource AddButtonn}"
     Content="طباعه التقرير"
     Width="264" Height="60"/>
                </StackPanel>

            </StackPanel>



            <DataGrid Grid.Row="3"
             x:Name="dgRepresentatives"
             AutoGenerateColumns="False"
             CanUserAddRows="False"
             CanUserDeleteRows="False"
             IsReadOnly="False"
             HeadersVisibility="Column"
             FontSize="14" 
             RowHeight="25" Width="1200"
             Background="White" 
          FlowDirection="RightToLeft">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Id}" Header="اسم السلع " Width="*"/>
                    <DataGridTextColumn Binding="{Binding Name}" Header=" الرصيد قبل الفتره  " Width="2*"/>
                    <DataGridTextColumn Binding="{Binding Name}" Header=" المبلغ قسط  " Width="2*"/>
                    <DataGridTextColumn Binding="{Binding user_Number}" Header=" المبلغ كاش  " Width="2*"/>
                    <DataGridTextColumn Binding="{Binding user_Number}" Header="الوارد" Width="2*"/>
                    <DataGridTextColumn Binding="{Binding user_Password}" Header=" التالف" Width="2*"/>
                    <DataGridTextColumn Binding="{Binding user_Password}" Header=" ارجاع للمورد" Width="2*"/>
                    <DataGridTextColumn Binding="{Binding user_Password}" Header=" الرصيد بعد الفتره" Width="2*"/>
                    <DataGridTextColumn Binding="{Binding user_Password}" Header=" سعر الشراء" Width="2*"/>
                    <DataGridTextColumn Binding="{Binding user_Password}" Header=" قيمه المخزن" Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>

            <Button Grid.Row="4" HorizontalAlignment="Left"   CommandParameter="DashBoardDoctor" 
                 Content="↩" FontSize="33" Style="{StaticResource triggerrr}"
                 Margin="71,0,0,1"  Height="55"
                 Click="BackBtn_Click"/>

        </Grid>
    </Grid>

    
    
</Page>
